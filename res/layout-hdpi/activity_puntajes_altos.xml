<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#ffff00">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="@string/botonyo"
                android:id="@+id/BTyo"
                android:layout_weight="0.5"
                android:onClick="mostrarPuntajeYo"
                android:background="#282828"
                android:layout_marginRight="5dp"
                android:textColor="#ffff00"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="@string/botontodos"
                android:id="@+id/BTtodos"
                android:layout_weight="0.5"
                android:onClick="mostrarPuntajeTodos"
                android:background="#282828"
                android:layout_marginLeft="5dp"
                android:textColor="#ffff00"/>
    </LinearLayout>

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/LYframe">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/LYyo">

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pposicion"
                        android:id="@+id/textView"
                        android:layout_weight="0.1"
                        android:textSize="25sp"
                        android:textColor="#ff0000"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pnombre"
                        android:id="@+id/textView2"
                        android:layout_weight="0.6"
                        android:textSize="25sp"
                        android:textColor="#ff0000"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ppuntaje"
                        android:id="@+id/textView3"
                        android:layout_weight="0.3"
                        android:textSize="25sp"
                        android:textColor="#ff0000"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"
                        android:id="@+id/LYnum">
                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.6"
                        android:id="@+id/LYnombre">

                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.3"
                        android:id="@+id/LYpuntaje">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/LYtodos"
                android:visibility="gone">

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pposicion"
                        android:id="@+id/textView4"
                        android:layout_weight="0.1"
                        android:textSize="25sp"
                        android:textColor="#ff0000"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pnombre"
                        android:id="@+id/textView5"
                        android:layout_weight="0.6"
                        android:textSize="25sp"
                        android:textColor="#ff0000"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ppuntaje"
                        android:id="@+id/textView6"
                        android:layout_weight="0.3"
                        android:textSize="25sp"
                        android:textColor="#ff0000"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"/>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.6"/>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.3"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>