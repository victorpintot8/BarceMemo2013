<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#fffa00">

    <TextView
        android:id="@+id/TVmain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title_main"
        android:textSize="70sp" android:textStyle="bold|italic" android:textColor="#ff0000" android:focusable="false"
        android:textIsSelectable="false" android:typeface="serif" android:autoText="false"
            />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/desJuego"
            android:id="@+id/desJuego"
            android:gravity="center"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:src="@drawable/barcelonalogo"
            />

    <Button
        android:id="@+id/BTstart"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:onClick="start"
        android:text="@string/start_game" android:textStyle="bold" android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:textSize="60sp"
        android:textColor="#ffff00"
        android:background="#282828"
        android:layout_marginTop="20dp"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/puntajes"
            android:id="@+id/BTpuntaje"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textStyle="bold"
            android:onClick="puntaje"
            android:textColor="#ffff00"
            android:background="#282828"
            android:layout_marginTop="8dp"
        android:textSize="40sp" />

    <Button
        android:id="@+id/BTpreferences"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/preferences" android:textStyle="bold" android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:onClick="Epreferencias"
        android:textColor="#ffff00"
        android:background="#282828"
        android:layout_marginTop="8dp"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/creado_por"
        android:textSize="30sp"
        android:layout_marginTop="40dp" />

</LinearLayout>